<section class="card h-75 rounded-5 ">
  <h2 class="card-header">conversations</h2>
  <div class="card-body overflow-auto">
    <ul class=" list-group list-group-flush " id="conversation-list">
      {{#each conversations as |conversation|}}
        {{> conversation-details}}
      {{/each}}
    </ul>
  </div>
</section>

<div class="d-flex mt-3 justify-content-end">
  <a href="/new-conversation" class="col col-md-3 btn btn-primary new-conversation-btn text-white" style="text-decoration: none;">new conversation</a>
</div>

{{#if loggedIn}}
  <script src='/scripts/index.js'></script>
{{/if}}
