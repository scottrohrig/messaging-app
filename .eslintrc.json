{
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "tabWidth": 2
      },
      {
        "usePrettierrc": true
      }
    ],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-unused-vars": "warn",
    "array-bracket-spacing": "warn",
    "func-names": "off",
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "indent": ["error", 2],
    "consistent-return": "off"
  },
  "plugins": ["prettier"]
}
